# Frontend Environment Variables
# Copy this file to .env and update values as needed

# Public URL for the site (required for sitemap generation)
NEXT_PUBLIC_BASE_URL=https://glasscode.academy

# API base URL (required for API calls)
NEXT_PUBLIC_API_BASE=https://api.glasscode.academy

# Auth configuration
NEXTAUTH_URL=https://glasscode.academy
NEXTAUTH_SECRET=your-nextauth-secret-here

# Provider credentials (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_ID=
GITHUB_SECRET=
APPLE_CLIENT_ID=
APPLE_CLIENT_SECRET=