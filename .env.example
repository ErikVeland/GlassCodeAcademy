# GlassCode Academy Deployment Configuration
# Copy this file to .env and customize for your environment

# Application name (used for service names)
# APP_NAME=glasscode

# System user to run the application
# DEPLOY_USER=deploy

# Directory where the application will be installed
APP_DIR=/srv/academy

# Git repository to clone
# REPO=git@github.com:YourUsername/YourFork.git

# Domain name for the application
# DOMAIN=yourdomain.com

# Email for SSL certificate registration
# EMAIL=your-email@example.com

# GlassCode Academy Deployment Configuration
APP_NAME=glasscode
DEPLOY_USER=deploy
APP_DIR=/srv/academy
REPO=git@github.com:ErikVeland/GlassCodeAcademy.git
DOMAIN=glasscode.academy
EMAIL=erik@veland.au

# Environment URLs
NEXT_PUBLIC_API_BASE=https://glasscode.academy
NEXT_PUBLIC_BASE_URL=https://glasscode.academy

# Authorisation
NEXTAUTH_URL=https://glasscode.academy
NEXTAUTH_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_ID=
GITHUB_SECRET=
APPLE_CLIENT_ID=
APPLE_CLIENT_SECRET=
DEMO_USERS_JSON='[{"email":"user@example.com","name":"Demo User","passwordHash":"<hash>"}]'
