{
  "name": "glasscode-backend-node",
  "version": "0.1.0",
  "private": true,
  "description": "Express backend for GlassCode Academy",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "NODE_ENV=development nodemon server.js",
    "lint": "eslint src/**/*.js scripts/**/*.js --max-warnings=0",
    "lint:fix": "eslint src/**/*.js scripts/**/*.js --fix --max-warnings=0",
    "format": "prettier --write src/**/*.js scripts/**/*.js",
    "format:check": "prettier --check src/**/*.js scripts/**/*.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@sentry/node": "^10.21.0",
    "@sentry/profiling-node": "^10.21.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.10",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.32.1",
    "uuid": "^8.3.2",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4"
  }
