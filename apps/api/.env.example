# ============================================================================
# GlassCode Academy - Environment Configuration Template
# ============================================================================
# Copy this file to .env and fill in the actual values
# NEVER commit .env files to git - they contain sensitive secrets!
# ============================================================================

# ----------------------------------------------------------------------------
# Server Configuration
# ----------------------------------------------------------------------------
PORT=8081
NODE_ENV=development

# ----------------------------------------------------------------------------
# Database Configuration
# ----------------------------------------------------------------------------
# Option 1: Use DATABASE_URL (recommended)
DATABASE_URL=postgresql://username:password@localhost:5432/glasscode_dev

# Option 2: Use discrete variables (if DATABASE_URL not set)
DB_DIALECT=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=glasscode_dev
DB_USER=your_db_username
DB_PASSWORD=your_db_password
DB_SSL=false

# For tests (optional - defaults to SQLite in-memory)
# USE_REAL_DB_FOR_TESTS=false
# TEST_DATABASE_URL=postgresql://username:password@localhost:5432/glasscode_test

# ----------------------------------------------------------------------------
# JWT Authentication (REQUIRED)
# ----------------------------------------------------------------------------
# Generate a secure secret with: openssl rand -base64 32
# MUST be at least 32 characters in production!
JWT_SECRET=REPLACE_WITH_SECURE_RANDOM_STRING_MINIMUM_32_CHARS
JWT_EXPIRES_IN=24h

# ----------------------------------------------------------------------------
# Redis Cache (Optional - gracefully falls back if not available)
# ----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
CACHE_ENABLED=true
CACHE_TTL=3600

# ----------------------------------------------------------------------------
# Monitoring & Observability
# ----------------------------------------------------------------------------
# Sentry Error Tracking (required in production)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# OpenTelemetry (optional)
OTEL_EXPORTER_JAEGER_ENDPOINT=http://localhost:14268/api/traces
OTEL_SERVICE_NAME=glasscode-backend

# Prometheus Metrics
METRICS_PORT=9464

# ----------------------------------------------------------------------------
# OAuth Providers (Optional - only if OAuth enabled)
# ----------------------------------------------------------------------------
OAUTH_ENABLED=false

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:8081/api/auth/google/callback

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:8081/api/auth/github/callback

# ----------------------------------------------------------------------------
# Email Configuration (Optional)
# ----------------------------------------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@glasscode.academy

# ----------------------------------------------------------------------------
# External APIs (Optional)
# ----------------------------------------------------------------------------
# OpenAI (if AI features enabled)
OPENAI_API_KEY=sk-your-openai-api-key

# ----------------------------------------------------------------------------
# Content Configuration
# ----------------------------------------------------------------------------
CONTENT_ROOT=./content
UPLOAD_MAX_SIZE=10485760
UPLOAD_DIR=./uploads

# ----------------------------------------------------------------------------
# Security Configuration
# ----------------------------------------------------------------------------
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ----------------------------------------------------------------------------
# Feature Flags
# ----------------------------------------------------------------------------
FEATURE_FORUMS_ENABLED=true
FEATURE_CERTIFICATES_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true

# ----------------------------------------------------------------------------
# Database Sync (DANGER - only for development!)
# ----------------------------------------------------------------------------
# Set to true to auto-sync database schema (drops all data!)
# NEVER use in production - use migrations instead
DB_SYNC=false
DB_FORCE_SYNC=false