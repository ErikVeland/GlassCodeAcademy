# Test Environment Configuration
# Copy this file to .env.test and fill in your values

# Environment
NODE_ENV=test

# PostgreSQL Test Database (Recommended)
USE_REAL_DB_FOR_TESTS=true
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/glasscode_test

# Alternative: Discrete PostgreSQL Variables
# DB_DIALECT=postgres
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=glasscode_test
# DB_USER=test_user
# DB_PASSWORD=test_password
# DB_SSL=false

# For SQLite Tests (Default - not recommended for integration tests)
# Leave USE_REAL_DB_FOR_TESTS unset or set to false
# Database will automatically use sqlite::memory:

# Redis (if needed for cache tests)
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Secret (for auth tests)
JWT_SECRET=test-jwt-secret-change-in-production-min-32-chars-long

# API Configuration
PORT=8080
API_BASE_URL=http://localhost:8080

# Disable external services in tests
SENTRY_DSN=
ENABLE_TRACING=false

# Test-specific settings
LOG_LEVEL=error
ENABLE_QUERY_LOGGING=false
