# PostgreSQL Environment Configuration Template
# Copy this to .env and update with your actual values

# Server Configuration
PORT=8080
NODE_ENV=development

# PostgreSQL Database Configuration
DB_DIALECT=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=glasscode_dev
DB_USER=glasscode_user
DB_PASSWORD=secure_password_change_me

# Alternative: Use DATABASE_URL (overrides individual settings)
# DATABASE_URL=postgresql://glasscode_user:secure_password_change_me@localhost:5432/glasscode_dev

# Database Connection Pool
DB_POOL_MAX=10
DB_POOL_MIN=2
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# Database Sync Settings (use migrations instead)
DB_SYNC=false
DB_SYNC_ALTER=false

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Content Configuration
CONTENT_ROOT=./content

# OAuth Configuration - Google
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_REDIRECT_URI=http://localhost:8080/api/oauth/google/callback

# OAuth Configuration - GitHub
GITHUB_CLIENT_ID=your-github-client-id-here
GITHUB_CLIENT_SECRET=your-github-client-secret-here
GITHUB_REDIRECT_URI=http://localhost:8080/api/oauth/github/callback

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password
EMAIL_FROM="GlassCode Academy <no-reply@glasscode.academy>"

# Monitoring Configuration
SENTRY_DSN=
PROMETHEUS_PORT=9091

# OpenTelemetry Configuration
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Redis Configuration (if using)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Feature Flags
ENABLE_OAUTH=true
ENABLE_NOTIFICATIONS=true
ENABLE_FORUM=true
ENABLE_CERTIFICATES=true
