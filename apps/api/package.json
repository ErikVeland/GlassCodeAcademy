{
  "name": "glasscode-backend-node",
  "version": "1.0.0",
  "description": "Node.js backend for GlassCode Academy",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "NODE_ENV=development nodemon server.js",
    "dev:ts": "tsx src/server.ts",
    "test": "NODE_ENV=test jest --passWithNoTests",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage --passWithNoTests",
    "test:integration": "USE_REAL_DB_FOR_TESTS=true NODE_ENV=test TEST_DATABASE_URL=\"$DATABASE_URL\" node scripts/migrate.js && USE_REAL_DB_FOR_TESTS=true NODE_ENV=test TEST_DATABASE_URL=\"$DATABASE_URL\" jest --runInBand --detectOpenHandles --verbose",
    "lint": "eslint \"src/**/*.{js,ts}\"",
    "lint:fix": "eslint \"src/**/*.{js,ts}\" --fix",
    "format": "prettier --write \"src/**/*.{js,ts}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts}\"",
    "build": "echo 'No build step required for Node.js application'",
    "health": "node scripts/health-check.js",
    "health:test": "node scripts/test-health-endpoints.js",
    "migrate": "node scripts/run-migrations.js",
    "migrate:umzug": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "seed:content": "node scripts/seed-content.js",
    "seed:academy": "node scripts/seed-academy.js",
    "verify-migrations": "node scripts/verify-migrations.js"
  },
  "keywords": [
    "nodejs",
    "fastify",
    "postgresql",
    "api"
  ],
  "author": "GlassCode Academy",
  "license": "MIT",
  "dependencies": {
    "@fastify/compress": "^8.1.0",
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/redis": "^7.1.0",
    "@opentelemetry/auto-instrumentations-node": "^0.67.0",
    "@opentelemetry/exporter-jaeger": "^2.2.0",
    "@opentelemetry/exporter-prometheus": "^0.207.0",
    "@opentelemetry/instrumentation-http": "^0.207.0",
    "@opentelemetry/instrumentation-pg": "^0.60.0",
    "@opentelemetry/resources": "^2.2.0",
    "@opentelemetry/sdk-node": "^0.207.0",
    "@opentelemetry/semantic-conventions": "^1.37.0",
    "@sentry/node": "^10.21.0",
    "@sentry/profiling-node": "^10.21.0",
    "@sentry/tracing": "^7.120.4",
    "adm-zip": "^0.5.16",
    "archiver": "^7.0.1",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1",
    "fastify": "^5.6.2",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.10",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "redis": "^5.9.0",
    "sequelize": "^6.32.1",
    "umzug": "^3.6.0",
    "uuid": "^8.3.2",
    "winston": "^3.10.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@eslint/eslintrc": "^3.0.0",
    "@eslint/js": "^9.0.0",
    "@stylistic/eslint-plugin": "^2.6.0",
    "@types/axios": "^0.9.36",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.0",
    "@types/pino": "^7.0.4",
    "babel-jest": "^30.2.0",
    "eslint": "^9.0.0",
    "globals": "^13.24.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.0.0",
    "sqlite3": "^5.1.7",
    "supertest": "^7.1.4",
    "tsx": "^4.20.6",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
